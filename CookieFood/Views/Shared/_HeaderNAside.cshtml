<!-- Main Header -->
<header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>CF</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>CookieFood</b></span>
    </a>
    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- User Account Menu -->
                <li class="dropdown user user-menu">
                    <!-- Menu Toggle Button -->
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <!-- The user image in the navbar-->
                        <img src="~/Content/images/daimler-logo.png" class="user-image" alt="User Image">
                        <!-- hidden-xs hides the username on small devices so only the image appears. -->
                        <span id="UsuarioHeader" class="hidden-xs"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- The user image in the menu -->
                        <li class="user-header">
                            <img id="userImageMenu" src="../Content/images/daimler-logo.png" class="img-circle" alt="User Image">
                            <p id="WIW">                                
                            </p>
                        </li>
                        <!-- Menu Body -->
                        <li class="user-body">
                            <div class="row">
                                <div class="col-xs-4 text-center">
                                    <a href="#">Account</a>
                                </div>
                            </div>
                            <!-- /.row -->
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat">Profile</a>
                            </div>
                            <div class="pull-right" onclick="CierraSesion();">
                                <p onclick="CierraSesion();" class="btn btn-default btn-flat">Cerrar Sesión</p>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar" style="position: fixed">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left image">
                <img id="userImageSlider"src="../Content/images/daimler-logo.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info" style="margin-top:10px;">
                <p id="UsuarioColumnaIzquierda"></p>
            </div>
        </div>
        <!-- Sidebar Menu -->
        @Html.Partial("_MainMenu")
    </section>
</aside>

<script>
    var screen = $('#loading-screen');
    configureLoadingScreen(screen);
    $.get('/Home/GetName').done(function (data) {
        document.getElementById("UsuarioColumnaIzquierda").innerHTML = data;
        document.getElementById("UsuarioHeader").innerHTML = data;
        document.getElementById("WIW").innerHTML = data + "<small>Welcome to TOS system.</small>";
        document.getElementById("toast").innerHTML = "¡Bienvenido " + data + "!";
    });   
</script>